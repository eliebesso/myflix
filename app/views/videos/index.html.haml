- if logged_in?
	%article.video_category
		%header
			- @categories.each do |category|
				%h3= link_to category.name, category_path(category.id)
				.videos.row
					- category.recent_videos.each do |video|
						.video.col-sm-2
							= link_to video_path(video.id) do
								- image_tag(video.small_cover_url)
- else
	%section.site_title
		%h1
			Unlimited Movies for Only 9.99 a Month.
			= link_to "Sign Up Now!", register_path
		%p.sign_up
		%p.sign_in
			Have an account? Please
			= link_to "Sign In", login_path
