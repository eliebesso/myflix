%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: '/login', html: { class: "form-horizontal" } do |f|
        %header
          %h1 Sign in
        %fieldset
          = f.email_field :email
          = f.password_field :password
          = f.submit "Sign In"